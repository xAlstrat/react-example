{
  "image": "nikolaik/python-nodejs:python3.12-nodejs22-slim",
  "features": {
  },
  "onCreateCommand": "./.devcontainer/oncreate.sh",
  "postAttachCommand": "plus-coder --show-repo",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash", // Or /bin/zsh, or any custom shell
        "terminal.integrated.shellArgs.linux": ["--login"],
        "terminal.integrated.profiles.osx": {
            "bash": {
                "path": "bash",
                "args": [
                    "-l"
                ],
                "icon": "terminal-bash"
            },
            "zsh": {
                "path": "zsh",
                "args": [
                    "-l"
                ]
            },
            "fish": {
                "path": "fish",
                "args": [
                    "-l"
                ]
            },
            "tmux": {
                "path": "tmux",
                "icon": "terminal-tmux"
            },
            "pwsh": {
                "path": "pwsh",
                "icon": "terminal-powershell"
            },
            "CHAT": {
                "path": "/bin/zsh",
                "args": ["-c", "source ~/.zshrc; source ~/Projects/emprendimientos/pluscoder/.venv/bin/activate; echo 'run: aideri && python -m pluscoder --read_only'; exec zsh"],
                "overrideName": "CHAT"
              },
            "PLUSCODER": {
                "path": "/bin/zsh",
                "args": ["-c", "source ~/.zshrc; source ~/Projects/emprendimientos/pluscoder/.venv/bin/activate; echo 'run: aideri && python -m pluscoder'; exec zsh"],
                "overrideName": "PLUSCODER"
            }
        }
      }
    }
    
  },
}
